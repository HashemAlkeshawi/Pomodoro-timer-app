<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/settingsBackground">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <Switch
            android:layout_margin="15dp"
            android:id="@+id/switchEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto start pomodoro after breaks"
            android:background="@color/NumberPicker"
            android:padding="20dp"
            android:textSize="13sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_margin="18dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center_vertical"
                    android:text="Pomodoro duration: "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <NumberPicker
                    android:id="@+id/numberPicker_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/NumberPicker"/>
                <NumberPicker
                    android:id="@+id/numberPicker_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/NumberPicker"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_margin="18dp">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:text="Long Break duration: "
                    android:gravity="center_vertical"/>

                <NumberPicker
                    android:id="@+id/numberPicker_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/NumberPicker"/>
                <NumberPicker
                    android:id="@+id/numberPicker_6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/NumberPicker"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_margin="18dp">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:text="Break duration: "
                    android:gravity="center_vertical"/>

                <NumberPicker
                    android:id="@+id/numberPicker_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/NumberPicker"/>
                <NumberPicker
                    android:id="@+id/numberPicker_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/NumberPicker"/>

            </LinearLayout>

            <Button
                android:id="@+id/Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Save"
                android:textSize="30sp"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>